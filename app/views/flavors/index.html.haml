    #registerModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog{:role => "document"}
        .modal-content
          #registerView
            .modal-header
              %h4.modal-title Register
              %button.close{"data-dismiss" => "modal", :type => "button"}
                %span{"aria-hidden" => "true"} ×
                %span.sr-only Close
            .modal-body
              .well
                %form#registerForm{"data-toggle" => "validator"}
                  .form-group
                    %label.control-label{:for => "name"} Name
                    %input#nameR.form-control{:name => "name", :placeholder => "Name", :title => "Please enter your name", :type => "text"}/
                  .form-group
                    %label.control-label{:for => "lastname"} Lastname
                    %input#lastNameR.form-control{:name => "lastname", :placeholder => "Lastname", :title => "Please enter your lastname", :type => "text"}/
                  .form-group
                    %label.control-label{:for => "email"} E-mail
                    %input#emailR.form-control{:name => "email", :placeholder => "E-mail", :title => "Please enter your email", :type => "text"}/
                  .form-group
                    %label.control-label{:for => "phone"} Phone
                    %input#phoneR.form-control{:name => "phone", :placeholder => "Phone Number", :title => "Please enter your telephone", :type => "text"}/
                  .form-group
                    %label.control-label{:for => "address"} Address
                    %input#addressR.form-control{:name => "address", :placeholder => "Address", :title => "Please enter your address", :type => "text"}/
                  .form-group
                    %label.control-label{:for => "username"} Username
                    %input#usernameR.form-control{:name => "username", :placeholder => "Username", :required => "", :title => "Please enter your username", :type => "text"}/
                    %span.help-block
                  .form-group
                    %label.control-label{:for => "password"} Password
                    %input#passwordR.form-control{:name => "password", :placeholder => "Password", :required => "", :title => "Please enter your password", :type => "password"}/
                    %span.help-block Min. 6 characteres
                  .form-group
                    %label.control-label{:for => "password"} Confirm Password
                    %input#confirmPasswordR.form-control{:name => "passwordConfirm", :placeholder => "Confirm Password", :required => "", :title => "Confirm password", :type => "password"}/
                    %span.help-block
                  #registerErrorMsg.alert.alert-danger.collapse{:role => "alert"} Register error
                  %button.btn.contact-btn.btn-block{:type => "submit"} Register
    #loginModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
