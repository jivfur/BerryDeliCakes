= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :orderDate
  
  .field
    = f.label :deliveryDate
    = f.datetime_select :deliveryDate
  .field
    = f.label :deliveryAddress
    = f.text_area :deliveryAddress
  .field
    = f.label :deliveryPhone
    = f.text_field :deliveryPhone
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :comments
    = f.text_area :comments
  .field
    = f.label :cakePrice
    = f.text_field :cakePrice
  .field
    = f.label :paidStatus
    = f.number_field :paidStatus
  .actions
    = f.submit 'Save'
